// This is your Prisma schema file
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Todo {
  id          String   @id @default(uuid())
  title       String
  description String?
  priority    String
  dueDate     DateTime?
  completed   Boolean  @default(false)
  createdAt   DateTime @default(now())
}